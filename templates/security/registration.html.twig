{% extends 'base.html.twig' %}

{% form_theme formRegister 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>Inscription sur le site</h1>

    {{ form_start(formRegister) }}

    {{ form_row(formRegister.username, {'label':"Nom d'\utilisateur",'attr': {'placeholder': "Votre Nom d'utilisateur"}}) }}
    {{ form_row(formRegister.email, {'label':"Email",'attr': {'placeholder': "Votre Email"}}) }}
    {{ form_row(formRegister.password, {'label':"Mot de passe",'attr': {'placeholder': "Votre Mot de passe"}}) }}
    {{ form_row(formRegister.confirm_password, {'label':"Confirmation mot de passe",'attr': {'placeholder': "Confirmez votre mot de passe"}}) }}

    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(formRegister) }}

{% endblock %}